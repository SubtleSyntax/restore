<?xml version='1.0' encoding='utf-8'?>
<widget id="com.subtlesyntax.restore" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Re:Store</name>
    <description>
        Re:Store customer check-in app
    </description>
    <author email="john@subtlesyntax.com" href="http://subtlesyntax.com">
        Subtle Syntax
    </author>
    <content src="index.html" />
    <icon density="xhdpi" src="www/main/assets/images/icon_xhdpi.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name='phonegap-version' value='cli-5.1.1' />
    <preference name="orientation" value="landscape" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-device" spec="^1.0.0" />
    <plugin name="cordova-plugin-dialogs" spec="^1.1.0" />
    <plugin name="cordova-plugin-network-information" spec="^1.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^1.0.0" />
    <plugin name="com.phonegap.plugins.barcodescanner" spec="https://github.com/wildabeast/BarcodeScanner.git" />
    <engine name="android" spec="^4.0.2" />
    <plugin name="de.appplant.cordova.plugin.email-composer" spec="https://github.com/katzer/cordova-plugin-email-composer.git" />
    <plugin name="nl.codeyellow.signature" spec="https://github.com/netinhoteixeira/cordova-plugin-signature-view" />
    <plugin name="com.phonegap.plugins.OrientationLock" spec="https://github.com/cogitor/PhoneGap-OrientationLock.git" />
</widget>
